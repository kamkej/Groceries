<Page loaded="loaded">

    <StackLayout orientation="vertical" >
        <Image src="res://logo" stretch="none" horizontalAlignment="center" />
        <TextField hint="Email Address" id="email" text="{{ email }}" KeyboardType="email" autocorrect="false" autocapitalizationType="none"/>
        <TextField hint="Password" secure="true" text="{{ password}}" />

        <Button text="Sign in" tap="signIn"/>
        <Button text="Sing up for Groceries" class="link" tap="register" />
    </StackLayout>

</Page>